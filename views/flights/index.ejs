<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/flights/index.css" />
  <%- include('../partials/nav') %>

    <main>
      <h1>Flight List</h1>
      <table id="list">
        <thead>
          <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>FlightNo</th>
            <th>Departs</th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach((flight)=> { %>
            <tr>
              <td>
                <%= flight.airline %>
              </td>
              <td>
                <%= flight.airport %>
              </td>
              <td>
                <%= flight.flightno %>
              </td>
              <td>
                <%= flight.departs %>
              </td>
              <td><a href="/flights/<%= flight._id %>">DETAILS</a>
              <td>
                <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                  <button>X</button>
                </form>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>